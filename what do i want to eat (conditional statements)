#include <stdio.h>
int num;
int main()
{
    printf("enter a number from 1-5 =");
    scanf("%d",&num);
    if (num==1){
    printf("Food Item = PIZZA \n Price = RS 178");
    }
    else if(num==2){
    printf("Food Item = Sandwich \n Price = RS 149 ");
    }
    else if(num==3){
        printf("Food Item = Pasta \n Price = RS 179");
    }
    else if(num==4){
        printf("Food Item = French Fries \n Price = RS 99");
    }
    else if(num==5){
        printf("Food Items = Burger \n Price = RS 129");
    }
    else{
        printf("The menu will be added soon");
    }

    return 0;
}
